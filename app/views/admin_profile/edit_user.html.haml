%div.container-fluid
  %div.row-fluid
    %div.span3
      %div.well.sidebar-nav
        %ul.nav.nav-list
          %li.nav-header Posts
          %li.active= link_to "Create post", new_post_path
          %li= link_to "All posts", profile_all_posts_path
          %li= link_to "Draft", profile_draft_path
          %li= link_to "New posts", profile_new_posts_path
          %li= link_to "Publish", profile_publish_path
          %li= link_to "Archive", profile_archive_path
          %li.nav-header My profile
          %li= link_to "Edit profile", edit_user_registration_path
    %div.span9
      %div.row-fluid
        %div.span12 
          %h1 Edit user
          = simple_form_for(admin_profile_path,url:admin_profile_update_user_path, html: { method: :put }) do |f|
            = f.input :name , value: 'Yes, remember me'
            = f.input :last_name, value: 'Yes, remember me'
            = f.input :email, autofocus: true
            = f.input :password, autocomplete: "off"
            = f.input :role
            .btn.btn-success= f.submit