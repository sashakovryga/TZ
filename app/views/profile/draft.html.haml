%div.container-fluid
  %div.row-fluid
    %div.span3
      %div.well.sidebar-nav
        %ul.nav.nav-list
          %li.nav-header Posts
          %li= link_to "Create post", new_post_path
          %li= link_to "All posts", profile_all_posts_path
          %li.active= link_to "Draft", profile_draft_path
          %li= link_to "New posts", profile_new_posts_path
          %li= link_to "Publish", profile_publish_path
          %li= link_to "Archive", profile_archive_path
          %li.nav-header My profile
          %li= link_to "Edit profile", edit_user_registration_path
    %div.span9
      %div.row-fluid
        - @posts.each do |post|
          %div.span4
            %h2= post.title
            %p= post.description
            %p
              .btn= link_to 'View details &raquo', post
              - if can? :update, post 
                %p= link_to 'Edit', edit_post_path(post) 
              - if can? :destroy, post
                %p.btn= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }
              = simple_form_for(post,url:profile_transaction_path, method: :post) do |f|
                = f.hidden_field :id
                .btn.btn-success= f.submit "Status new"
%hr
%footer
