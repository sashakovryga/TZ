#notice= notice
%div.container-fluid
  %div.row-fluid
    %div.span12
      %div.row-fluid
        - @posts.each do |post|
          %div.span4
            %h2= post.title
            -#= image_tag post.images.first.picture.url(:thumb)
            %p= post.description
            %p
              .btn= link_to 'View details &raquo', post
  %center= will_paginate @post
%hr
%footer
  %p &copy; TZ 2014